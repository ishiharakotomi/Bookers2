<% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
<% end %>
<div class="container">
  <div class="row">
   <%= render'users/sidebar', user:@user, book:@newbook %>
   <div class="col-xs-9">
        <h2>Book detail</h2>
          <table class="table">
            <thead>
              <tr></tr>
            </thead>
              <tbody>
                <tr>
                  <th><%= attachment_image_tag @book.user, :profile_image, class: "pull-left profile-thumb", fallback: "no_image.jpg", size:'45x45'%></th>
                  <th><%= @book.title %></th>
                  <th><%= @book.body %></th>
                  <% if current_user.id == @book.user_id %>
                  <th><%= link_to "Edit",edit_book_path(@book.id), class: "btn-sm btn-success"%></th>
                  <th><%= link_to "Destroy", book_path(@book.id), method: :delete, "date-confirm" => "本当に削除しますか？",class: "btn-sm btn-danger"%></th>
                  <% end %>
                </tr>
              </tbody>
            </thead>
          </table>
    </div>
  </div>
</div>