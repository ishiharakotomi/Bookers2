<% if @book.errors.any? %>
    <h3><%= @book.errors.count %>error occurrence</h3>
    <ul>
        <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
        <% end %>
    </ul>
  </div>
<% end %>
<div class="container">
  <div class="row">
  <%= render'users/sidebar', user:@user, book:@book %>
    <div class="col-xs-9">
      <h2>Books</h2>
        <table class="table table-hover">
          <thead>
            <tr>
              <th></th>
              <th>Title</th>
              <th>Opinion</th>
            </tr>
          </thead>
          <tbody>
              <% @books.each do |book| %>
                <td>
                  <%= link_to user_path(book.user.id) do %>
                  <%= attachment_image_tag book.user, :profile_image, class: "pull-left profile-thumb", fallback: "no_image.jpg", size:'45x45'%>
                  <% end %>
                </th>
                <th><%= link_to book.title, book_path(book.id), class: "book_#{book.id}"%></th>
                <th><%= book.body %></th>
            </tr>
              <% end %>
          </tbody>
        </table>
  </div>
</div>
