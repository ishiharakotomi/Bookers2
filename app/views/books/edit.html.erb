<% if @book.errors.any? %>
  <div id="error_explanation">
  	<h2><%= @book.errors.count %>error! </h2>
    <ul>
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<div class="container-fluid">
  <div class="center-block">
    <div class="row">
      <div class="col-xs-3"></div>
	  <div class="col-xs-6">
		<h2> Editing Book</h2>
		<%= form_for(@book) do |f| %>
		<strong>Title</strong>
			<p><%= f.text_field :title, class:"form-control" %></p>
		<strong>Opinion</strong>
		<p><%= f.text_area :body, class:"form-control" %></p>
		<%= f.submit "Update Book", :class=>"btn btn-primary btn-lg btn-block" %>
		<%= link_to 'Show', book_path(@book), class: "book_#{@book.id}"%> |
		<%= link_to 'Back', books_path, class: "back"%>
		<% end %>
	  </div>
	  <div class="col-xs-3"></div>
	</div>
  </div>
</div>
