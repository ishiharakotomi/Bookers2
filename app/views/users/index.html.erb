<div class="container">
  <div class="row">
<%= render'users/sidebar', user:@user, book:@book %>
    <div class="col-xs-9">
      <h2> Users</h2>
        <table class="table table-hover">
  	      <thead>
  		      <tr>
  			      <th>image</th>
  			      <th>name</th>
              <th></th>
     	      </tr>
  	      </thead>
          <tbody>
            <% @users.each do |user| %>
                <th><%= attachment_image_tag @user, :profile_image, class: "pull-left profile-thumb", fallback: "no_image.jpg", size:'45x45'%></th>
                <th><%= user.name %></th>
                <th><%=link_to "Show",user_path(user.id)%></th>
              </tr>
            <% end %>
          </tbody>
        </table>
    </div>
  </div>
</div>