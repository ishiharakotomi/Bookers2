<div class="col-xs-3">
      <h2>User info</h2>
      <div class="noimage">
        <div class="user-edit-image">
              <%= attachment_image_tag user, :profile_image, :fill, 100, 100, class: "pull-left profile-thumb", fallback: "no_image.jpg"%>
        </div>
      </div>

    <table class=table>
      <tr>
        <th>name</th>
        <th><%= user.name %></th>
      </tr>
      <tr>
        <th width="140">introduction</th>
        <th><%= user.introduction %></th>

      </tr>
    </table>

    <%= link_to "",edit_user_path(user.id) ,class: "btn btn-default btn-lg btn-block glyphicon glyphicon-wrench" %>


    <h2> New Book</h2>
    <%= form_for(book) do |f| %>

       <h5>Title</h5>
       <p><%= f.text_field :title, class:"form-control" %></p>

       <h5>Opinion</h5>
       <p><%= f.text_area :body, class:"form-control" %></p>
       </%>

       <button type="submit" class="btn btn-primary btn-lg btn-block">Create Book</button>
    <% end %>
</div>